<UserControl x:Class="SHEZ_TouchWall.PhotoTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SHEZ_TouchWall"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Border x:Name="border" BorderThickness="3" Height="{Binding ElementName=imgPic1,Path=ActualHeight}"
                Width="{Binding ElementName=imgPic1,Path=ActualWidth}"
        BorderBrush="LightCyan"
        VerticalAlignment="Top" >
            <DockPanel>
                <Image Source="/images/sys/close.png" Width="20" Height="20" x:Name="close"
                       TouchDown="Image_TouchDown" DockPanel.Dock="Right" Panel.ZIndex="1" VerticalAlignment="Top" Margin="-20 0 0 0"></Image>
                <Image Name="imgPic1" Source="{Binding ImgSource}"  DockPanel.Dock="Left"
                       Stretch="None"
                       Panel.ZIndex="0"
                       VerticalAlignment="Top">
                </Image>
            </DockPanel>

        </Border>

    </Grid>
</UserControl>

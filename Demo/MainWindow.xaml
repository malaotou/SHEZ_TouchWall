<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <ListView Margin="14,152,12,74" Name="lvList" SelectionMode="Multiple">
            <ListView.View>
                <GridView x:Name="gvShow">
                    <GridViewColumn DisplayMemberBinding="{Binding ResultTitle}" Header="" />
                    <GridViewColumn DisplayMemberBinding="{Binding ResultContent}" Header="" />
                    <GridViewColumn DisplayMemberBinding="{Binding STime}" Header="开始时间" />
                    <GridViewColumn DisplayMemberBinding="{Binding ETime}" Header="结束时间" />
                    <GridViewColumn DisplayMemberBinding="{Binding Address}" Header="地址" />
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
